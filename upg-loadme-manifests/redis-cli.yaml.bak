kind: Deployment
apiVersion: apps/v1
metadata:
  name: redis-cli
  namespace: demo
  labels:
    app: redis-cli
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis-cli
  template:
    metadata:
      name: redis-cli
      labels:
        app: redis-cli
    spec:
      containers:
        - name: redis-cli
          image: 'redis:latest'
		  command: ["/bin/sh","-c","sleep 100000"]
          imagePullPolicy: Always
          ports:
            - containerPort: 6379
      restartPolicy: Always
      


